@model VotingPollApp.Models.Polls

@{
    ViewBag.Title = "Make a Poll";
    ViewBag.View = "Make Poll";
    ViewBag.Explaination = "Make a poll for people to vote on";
    
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Polls</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-2" })
        <strong>Poll Question:</strong>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Question, new { htmlAttributes = new { @class = "form-control input-width", placeholder = "Enter your poll question here" } })
                @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
            </div>
        </div>
        <strong>Poll Options:</strong>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Choice, new { htmlAttributes = new { @class = "form-control input-width", placeholder = "Put your option here" } }).
                @Html.ValidationMessageFor(model => model.Choice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Choice, new {htmlAttributes = new {@class = "form-control input-width", placeholder = "Put your option here" } })
                @Html.ValidationMessageFor(model => model.Choice, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Choice, new { htmlAttributes = new { @class = "form-control input-width" } })
                @Html.ValidationMessageFor(model => model.Choice, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            
            <div class="">
                &nbsp;&nbsp;&nbsp;@Html.LabelFor(model => model.Public, htmlAttributes: new { @class = "control-label" }) &nbsp;&nbsp;&nbsp;
                @Html.CheckBoxFor(model => model.Public, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Public, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="input-width ">
            <input type="submit" value="Create" class="btn btn-block btn-primary " />
        </div>

        <div class="form-group">
            
        </div>
    </div>
}
<h2>Make-Poll</h2>
